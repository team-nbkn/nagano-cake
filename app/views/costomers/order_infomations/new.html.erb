<div class='body'>
<div class="container">

<h3><strong>注文情報入力</strong></h3>
	<div class="row">
		<%= form_with url: costomers_order_infomations_confirm_path do |f| %>

			<div>
  				<%= f.label :お支払い方法 %>
  				<%= f.radio_button :payment_method, "クレジットカード " %>クレジットカード
  				<%= f.radio_button :payment_method, "銀行振り込み" %>銀行振り込み
  			</div>

  			<div>
  			<%= f.label :お届け先 %>
  				<div>
  					<%= f.radio_button :address, "ご自身の住所" %>ご自身の住所
  						<div>
  							<%= @costomer.postcode %>
  							<%= @costomer.address %>
  						</div>
  						<div>
  							<%= @costomer.first_name %>
  							<%= @costomer.last_name %>
  						</div>

  						<%= hidden_field_tag :postcode, @costomer.postcode %>
  						<%= hidden_field_tag :address, @costomer.address %>
  						<%= hidden_field_tag :name, @costomer.first_name %>
  						<%= hidden_field_tag :name, @costomer.last_name %>
				</div>
				<div>
					<%= f.radio_button :address, "登録済住所から選択" %>登録済住所から選択
						<div>
  							<%= f.select :shippngs_address, Shipping.all.collect{ |c| [ c.postcode, c.address, c.name, c.id]} %>
  						</div>
				</div>
  				<div>
  					<%= f.radio_button :address, "新しいお届け先" %>新しいお届け先
  						<div>
  							<%= f.label :"郵便番号(ハイフンなし)" %>
  							<%= f.email_field :postcode %>
  						</div>
  						<div>
  							<%= f.label :住所 %>
  							<%= f.email_field :address %>
  						</div>
  						<div>
  							<%= f.label :宛名 %>
  							<%= f.email_field :name %>
  						</div>
  				</div>
  			</div>

  			<%= f.submit '確認画面へ進む' %>
		<% end %>
  	</div>

</div>
</div>

