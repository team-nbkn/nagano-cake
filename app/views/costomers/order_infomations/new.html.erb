<div class='body'>
<div class="container">

<h3><strong>注文情報入力</strong></h3>
	<div class="row">

  <%= form_with  url: costomers_order_infomations_confirm_path, method: :get, deta: {remote: false} do |f| %>

      <div>
          <%= f.label "お支払い方法" %>
          <%= f.radio_button :payment_method, "クレジットカード" %>クレジットカード
          <%= f.radio_button :payment_method, "銀行振り込み" %>銀行振り込み
        </div>

        <div>
        <%= f.label "お届け先" %>
          <div>
            <%= radio_button_tag("address_type", "1") %>ご自身の住所
              <div>
                <%= @costomer.postcode %>
                <%= @costomer.address %>
              </div>
              <div>
                <%= @costomer.first_name %>
                <%= @costomer.last_name %>
              </div>
        </div>
        <div>
          <%= radio_button_tag("address_type", "2") %>登録済住所から選択
            <div>
                <%= f.collection_select :select, @shippings, :id, :shipping_all %>
              </div>
        </div>
          <div>
            <%= radio_button_tag("address_type", "3") %>新しいお届け先
              <div>
                <%= f.label "郵便番号(ハイフンなし)" %>
                <%= f.text_field :new_postcode %>
              </div>
              <div>
                <%= f.label_ "住所" %>
                <%= f.text_field :new_address %>
              </div>
              <div>
                <%= f.label "宛名" %>
                <%= f.text_field :new_name %>
              </div>
          </div>
        </div>

        <%= f.submit ('確認画面へ進む') %>
    <% end %>
    </div>

  	</div>

</div>
</div>

