<div class="row hhh">
  <div class="title1"><h3><span class="span-title">会員の方はこちらからログイン</span></h3></div>
  　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-xs-8">

    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , :size=>"73"%>
      </div>
    </div>

    <div class="form-group row">
      <label for="password" class="col-sm-2 col-form-label">パスワード</label>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "current-password" , :size=>"73"%>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-7"> </div>
      <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
    </div>

    <div class="row">
      <div class="col-sm-4"> </div>
      <%= f.submit "ログイン",class:"btn btn-primary" %>
    </div>

    <div class="title2"><h3><span class="span-title">登録がお済みでない方</span></h3></div>

    <div class="row">
      <div class="col-sm-1"> </div>
      <p><%= link_to "こちら",  new_costomer_registration_path %>&nbsp;&nbsp;&nbsp;&nbsp;から新規登録を行ってください。</p>
    </div>

    <% end %>
  </div>
</div>