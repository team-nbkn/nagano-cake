<div class='body'>
<div class="container">

<div class="row">
<!-- カート一覧 -->
	<div class="col-xs-12">
		<table class="table">
			<caption><strong>ショッピングカート</strong>
					 <button type="button"><%= link_to "カートを空にする", costomers_cart_item_path, method: :delete, data: { confirm: "カートを空にしますか？" } %></button>
			</caption>
			<thead>
				<tr>
					<th>商品名</th>
					<th colspan="1"></th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>

			<tbody>
				<% @sum = 0 %>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td>
							<%= attachment_image_tag cart_item.product, :image, :fill, 60, 60, format: 'jpeg', class: "pull-left"  %>
						</td>
						<td><%= cart_item.product.name %>
						</td>
						<td><%= ((cart_item.product.price).to_i * 1.1).to_i %>
						</td>
						<td>
							<%= form_for(cart_item, url: costomers_cart_item_path(cart_item.id), html: {method: "patch"}) do |f| %>
  								<%= f.text_field :order_quantity, value:  cart_item.order_quantity %>
								<button type="button"><%= submit_tag("変更") %></button>
      						<% end %>
						</td>
						<td><%= ((cart_item.product.price).to_i * 1.1).to_i * (cart_item.order_quantity).to_i %>
						</td>
						<td><button type="button"><%= link_to "削除する", costomers_cart_item_path(cart_item.id), method: :delete, data: { confirm: "商品をカートから削除しますか？" } %></button>
						</td>
					</tr>
					<% @sum += cart_item.product.price %>
				<% end %>
			</tbody>
		</table>

		<button type="button" class="text-left"><%= link_to "買い物を続ける", costomers_products_top_path %>
		</button>
		<p class="text-right">合計金額 <%= @sum %>
		</p>
		<button type="button" class="text-center"><%= link_to "情報入力に進む", new_costomers_order_infomation_path %>
		</button>

	</div>

</div>
</div>
</div>