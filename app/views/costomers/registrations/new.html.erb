
<h3><span class="span-title">新規会員登録</span></h3>
<br>
  <div class="row">
    <div class="col-xs-12">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "costomers/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">名前</label>
          <div class="col-sm-4">
          　<%= f.label "（姓）" %>
          　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
          <div class="col-sm-3">
            <%= f.label "（名）" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          </div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">フリガナ</label>
          <div class="col-sm-4">
            <%= f.label "（セイ）" %>
            <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name" %>
          </div>
          <div class="col-sm-3">
            <%= f.label "（メイ）" %>
            <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name" %>
          </div>
      </div>


      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-sm-3 ">
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
          </div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-3 ">
            <%= f.text_field :address, autofocus: true, autocomplete: "address" , :size=>"70"%>
          </div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">電話番号（ハイフンなし）</label>
          <div class="col-sm-3 ">s
          　<%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
        　</div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">パスワード
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></label>
          <div class="col-sm-3 ">
          　<%= f.password_field :password, autocomplete: "new-password" %>
        　</div>
      </div>

      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">パスワード（確認用）</label>
          <div class="col-sm-3 ">
          　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        　</div>
      </div>

    　<div class="row">
        <div class="col-sm-7"></div>
          <%= f.submit "新規登録",class:"btn btn-success" %>
      </div>
      <% end %>

      <h3><span class="span-title">既に登録済みの方</span></h3>
      <p><%= link_to "こちら", new_costomer_session_path %>&nbsp;&nbsp;&nbsp;&nbsp;からログインしてください</p>
    </div>
  </div>
</div>

