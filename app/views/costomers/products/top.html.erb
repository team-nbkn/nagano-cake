<div class="row">
	  <!-- ジャンル検索 -->
  <div class="col-xs-2" >
    <div class="categories">
        <div class="panel panel-color">
          <div class="panel-im"><h4><strong>ジャンル検索</strong></h4></div>
             <div class="panel-body">
                  <% @categories.each do |category| %>
            <strong><%= link_to category.name, costomers_products_path(category_id: category.id) %></strong><br><br>
          <% end %>
             </div>
        </div>
      </div>
    </div>
  <div class ="col-xs-10">
        <div class="mySlider1">
          <div id="mySlider1-target" class="carousel slide" data-ride="carousel">
            <!-- ページャー部分 -->
            <ol class="carousel-indicators">
              <li data-target="#mySlider1-target" data-slide-to="0"></li>
              <li data-target="#mySlider1-target" data-slide-to="1" class="active"></li>
              <li data-target="#mySlider1-target" data-slide-to="2"></li>
            </ol>
            <!-- 画像部分 -->
            <div class="carousel-inner" role="listbox">
              <div class="item">
                <img src="/assets/mains6.jpg" title="Image01" alt="Image01">
                  <div class="carousel-caption">
                    <h4>Recommended 01</h4>
                    <p>NganoCake</p>
               </div>
              </div>
              <div class="item active">
               <img src="/assets/mains2.jpg" title="Image02" alt="Image02">
                  <div class="carousel-caption">
                    <h4>Recommended 02</h4>
                    <p>NaganoCake</p>
                  </div>
              </div>
              <div class="item">
               <img src="/assets/mains5.jpg" title="Image03" alt="Image03">
                  <div class="carousel-caption">
                    <h4>Recommended 03</h4>
                    <p>NaganoCake</p>
                  </div>
              </div>
            </div>
            <!-- 左右移動コントローラー部分 -->
            <a class="left carousel-control" href="#mySlider1-target" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#mySlider1-target" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
	</div>


    <!-- 商品一覧 -->
	<div class="col-xs-12 scloll-top">

    <p class="recommend">Recommended</p>
      <div class="row">
        <div class="pall-box">
        <div class="col-xs-12">
          <% @products.each do |product| %>
            <div class="card it" style="width: 28rem;">
               <%= link_to costomers_product_path(product.id) do %>
                 <%= attachment_image_tag product, :image, :fill, 260, 220, format: 'jpeg', class: "card-img-top ima" %>
               <% end %>
                 <div class="card-body">
                  <h5><strong><%= link_to product.name, costomers_product_path(product.id), class: "card-title" %></strong></h5>
                  <p class="card-text"><strong>¥<%= product.price %></strong></p>
                  <%= link_to '詳細を見る', costomers_product_path(product.id), class: "btn-sm btn-danger bimage" %>
                </div>
            </div>
          <% end %>
        </div>
        </div>
      </div>
	  <p class="text-right"><%= link_to "もっと見る>", costomers_products_path %></p>
  </div>
</div>
