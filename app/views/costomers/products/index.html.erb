<div class='body'>
<div class="container">

<div class="row">
<!-- ジャンル検索 -->
	<div class="col-xs-3" >
		<div class="categories">
			<table>
				<caption>ジャンル検索</caption>
				<tbody>
					<% @categories.each do |category| %>
						<tr>
							<td><%= link_to category.name, costomers_products_path %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>

<!-- 商品一覧 -->
	<div class="col-xs-9">
		<table class="table">
			<thead>
				<tr>
					<th>商品一覧</th>
					<th>
        				<p class="product-count">(全<%= @products.count %>件)</p>
  					</th>
				</tr>
			</thead>

			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td>
							<%= attachment_image_tag @product, :image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img" %>
							<%= link_to @name, costomers_product_path(product_id) %>
						</td>
						<td><%= link_to product.name, costomers_product_path(product.id) %>
						</td>
						<td><%= link_to product.price, costomers_product_path(product.id) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

	</div>

</div>
</div>
</div>