<h2>配送先登録/一覧</h2>

  <%= form_for [:costomers, @shipping] do |f| %>

    <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
    </div>

    <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>

    <%= f.submit "登録する" %>
    </div>

  <% end %>
<p><%= flash[:notice] %></p>
  <div class="col-xs-11">
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
            </tr>
        </thead>

            <tbody>
              <% @shippings.each do |shipping| %>
                <tr>
                   <td>
                    <%= shipping.postcode %>
                   </td>
                   <td>
                     <%= shipping.address %>
                   </td>
                   <td>
                    <%= shipping.name %>
                   </td>
                   <td>
                    <%= link_to "編集する", edit_costomers_shipping_path(shipping.id), class: "btn-sm btn-primary" %>
                    <%= link_to "削除する", costomers_shipping_path(shipping.id), method: :delete, class: "btn-sm btn-danger" %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
