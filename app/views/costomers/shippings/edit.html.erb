<h2>配送先編集</h2>

<%= form_for [:costomers, @shipping] do |f| %>

    <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
    </div>

    <div class="field">
    <%= f.label "住所" %>
    　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60" %>
    </div>

    <div class="field">
    <%= f.label "宛名" %>
    　　　　　　　　　　<%= f.text_field :name, autofocus: true, autocomplete: "name" %>

    　　　　<%= f.submit "編集する", class: "btn btn-sm btn-primary" %>
    </div>

  <% end %>
