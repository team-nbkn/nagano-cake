<h2><strong>商品 編集画面</strong></h2><br>

<div class="row">
   <%= form_for [:admins, @product] do |pr| %>
	<div class="col-xs-3">
		<%= attachment_image_tag @product, :image, :fill, 200, 160, fallback: "no_image.jpg", id: :img_prev, class: "img_prev" %>
    <p></p>
		<%= pr.attachment_field :image, class: "btn btn-primary", id: :product_img %>
	</div>
	<div class="col-xs-9">
	    <div class="form-group row">
        <label for="product_name" class="col-sm-2 col-form-label">商品名</label>
        <div class="col-sm-10">
          <%= pr.text_field :name %>
        </div>
     </div>
     <div class="form-group row">
        <label for="product_body" class="col-sm-2 col-form-label">商品説明</label>
        <div class="col-sm-10">
          <%= pr.text_area :content %>
        </div>
     </div>
     <div class="form-group row">
        <label for="product_category" class="col-sm-2 col-form-label">ジャンル</label>
        <div class="col-sm-10">
          <%= pr.select :category_id, Category.all.collect{ |c| [ c.name, c.id]} %>
        </div>
     </div>
     <div class="form-group row">
        <label for="product_price" class="col-sm-2 col-form-label">税抜価格</label>
        <div class="col-sm-10">
          <%= pr.text_field :price %>円
        </div>
     </div>
     <div class="form-group row">
        <label for="product_status" class="col-sm-2 col-form-label">販売ステータス</label>
        <div class="col-sm-10">
          <%= pr.select :status, ['販売中止', '販売中'],{ class: "status"} %>
        </div>
     </div>
     <div class="row">
      <div class="col-sm-7"></div>
      <%= pr.submit "変更を保存", class: "btn btn-primary" %>
     </div>

	</div>
   <% end %>
</div>
