<h1>商品一覧画面</h1>
<%= link_to new_admins_product_path do %>
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
<% end %>

    <div class="row">

        <div class="col-xs-6">

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @products.each do |pr| %>
                <tr>
                   <td>
                   	<%= pr.id %>
                   </td>
                   <td>
            	     <%= link_to pr.name, admins_product_path(pr.id) %>
                   </td>
                   <td>
                   	<%= pr.price %>
                   </td>
                   <td>
                   	<%= pr.category.name %>
                   </td>
                   <td>
                   	<%= pr.status %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
