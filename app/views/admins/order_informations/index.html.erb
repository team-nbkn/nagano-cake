<div class="row">
  <div class="col-xs-11">
    <h2><strong>注文一覧画面</strong></h2><br>
  </div>
</div>

    <div class="row">
    	<div class="col-xs-1">
    	</div>

        <div class="col-xs-11">
         <!-- 個人の注文履歴 -->
        <% if params[:costomer_id] %>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @order_informations.each do |f| %>
                <tr>
                   <td>
                   	<%= link_to f.created_at.to_s(:datetime_jp), admins_order_information_path(f.id) %>
                   </td>
                   <td>
            	     <%= f.costomer.first_name + f.costomer.last_name %>
                   </td>
                   <td>
                   	<%= f.order_products.sum(:quantity) %>
                   </td>
                   <td>
                   	<%= f.status %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <!-- ここまで -->
          <!-- 1日の注文履歴 -->
          <% if params[:created_at] %>
           <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @order_informations.each do |f| %>
                <tr>
                   <td>
                    <%= link_to f.created_at.to_s(:datetime_jp), admins_order_information_path(f.id) %>
                   </td>
                   <td>
                   <%= f.costomer.first_name + f.costomer.last_name %>
                   </td>
                   <td>
                    <%= f.order_products.sum(:quantity) %>
                   </td>
                   <td>
                    <%= f.status %>
                   </td>
                </tr>
              <% end %>
            </tbody>
           </table>
          <% end %>
          <!-- ここまで -->
        <% else %>
          <!-- すべての注文履歴 -->
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @order_informations.each do |f| %>
                <tr>
                   <td>
                    <%= link_to f.created_at.to_s(:datetime_jp), admins_order_information_path(f.id) %>
                   </td>
                   <td>
                   <%= f.costomer.first_name + f.costomer.last_name %>
                   </td>
                   <td>
                    <%= f.order_products.sum(:quantity) %>
                   </td>
                   <td>
                    <%= f.status %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
          <!-- ここまで -->
        </div>
    </div>