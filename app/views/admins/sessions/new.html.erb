<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="field1">
          <label class="control-label col-md-6"><%= f.label :メースアドレス %></label>
          <fieldset class="col-md-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></fieldset>
        </div>
      </div>
      
      <div class="row">
        <div class="field2">
          <label class="col-md-6"><%= f.label :パスワード %></label>
          <fieldset class="col-md-2"><%= f.password_field :password, autocomplete: "current-password" %></fieldset>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-2 col-md-offset-6">
         <div class="actions1"><%= f.submit "ログイン" ,class: "btn btn-primary" %>
         </div>
       </div>
     </div>

   </div>
   <% end %>
 </div>
</div>



