<h2>ジャンル追加・一覧画面</h2>
  <%= form_for [:admins, @category] do |f| %>
     <div class="field row">
        <p>ジャンル</p>
          <%= f.text_field :name, class: "col-xs-3" %>
          <%= f.radio_button :status, :有効 %>有効
          <%= f.radio_button :status, :無効 %>無効
          <%= f.submit "追加", class:"btn btn-primary" %>
     </div>
  <% end %>
    <div class="row">

        <div class="col-xs-6">

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th>状態</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |ca| %>
                <tr>
                   <td>
            	     <%= ca.name %>
                   </td>
                   <td>
            	     <%= ca.status %>
                   </td>
                   <td>
                   	<%= link_to "編集する", edit_admins_category_path(ca.id), class: "btn-sm btn-primary" %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>