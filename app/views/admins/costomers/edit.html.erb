<h2><strong>会員編集画面</strong></h2><br>

<div class="row">
	<div class="col-xs-1">
	</div>
	<div class="col-xs-11">

	  <div class="form-group row">
          <label for="product_name" class="col-sm-2 col-form-label">会員ID</label>
        <div class="col-sm-10">
          <%= @costomer.id %>
        </div>
    </div>

      <%= form_for [:admins, @costomer] do |f| %>

      <div class="form-group row">
          <label for="product_body" class="col-sm-2 col-form-label">氏名</label>
        <div class="col-sm-10">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="product_category" class="col-sm-2 col-form-label">フリガナ</label>
        <div class="col-sm-10">
          <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name" %>
          <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="product_price" class="col-sm-2 col-form-label">郵便番号</label>
        <div class="col-sm-10">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>
      </div>

      <div class="form-group row">
      <label for="product_status" class="col-sm-2 col-form-label">住所</label>
        <div class="col-sm-10">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="product_status" class="col-sm-2 col-form-label">電話番号</label>
        <div class="col-sm-10">
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="product_status" class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="product_status" class="col-sm-2 col-form-label">会員ステータス</label>
        <div class="col-sm-10">
          <%= f.radio_button :status, :有効 %>有効
          <%= f.radio_button :status, :退会済 %>退会済
        </div>
      </div>

      <%= f.submit "変更を保存", class: "btn btn-primary" %>

	</div>
   <% end %>
</div>
