<h2><strong>会員詳細画面</strong></h2>
<div class="row">
    <tr>
      <td>顧客ID</td>
        <td><%= @costomer.id %></td>
        <td><% if @costomer.discarded_at == nil %>
            有効会員
          <% else %>
            退会済会員
          <% end %>
        </td>
    </tr><br>

    <tr>
  	  <td>氏名</td>
  	  <td><%= @costomer.first_name %><%= @costomer.last_name %></td>
    </tr><br>

    <tr>
      <td>フリガナ</td>
      <td><%= @costomer.first_kana_name %><%= @costomer.last_kana_name %></td>
    </tr><br>

    <tr>
      <td>郵便番号</td>
      <td><%= @costomer.postcode %></td>
    </tr><br>

    <tr>
      <td>住所</td>
      <td><%= @costomer.address %></td>
    </tr><br>

    <tr>
      <td>電話番号</td>
      <td><%= @costomer.phone %></td>
    </tr><br>

    <tr>
      <td>メールアドレス</td>
      <td><%= @costomer.email %></td>
    </tr><br>
    <div class="row">
      <div class="col-xs-1">
        <%= link_to "編集する", edit_admins_costomer_path(@costomer.id), class: "btn btn-primary"  %>
      </div>
      <div class="col-xs-5">
        <%= link_to "注文履歴一覧", admins_order_informations_path, class: "btn btn-primary"  %>
    </div>
    </div>

</div>
